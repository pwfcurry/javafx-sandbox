<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import pwfcurry.javafx.GroupingTable?>
<GridPane fx:controller="pwfcurry.javafx.Controller"
		  xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" minHeight="500" minWidth="500">
	<padding>
		<Insets top="25" right="10" bottom="10" left="10"/>
	</padding>
	
	<Button fx:id="button" text="button"
			GridPane.columnIndex="0" GridPane.rowIndex="0"
			GridPane.hgrow="ALWAYS"/>
	
	<Label fx:id="label" text="expanded rows"
		   GridPane.columnIndex="1" GridPane.rowIndex="0"
		   GridPane.halignment="RIGHT"/>
	
	<GroupingTable fx:id="table"
				   GridPane.columnIndex="0" GridPane.rowIndex="1"
				   GridPane.columnSpan="2"
				   GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
</GridPane>